# SmartRestaurant Environment Configuration Template
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=SmartRestaurant

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Application URLs (Production)
API_BASE_URL=https://api.smartrestaurant.yourdomain.com
WEB_BASE_URL=https://smartrestaurant.yourdomain.com

# SSL Certificate Paths (for production)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/private.key

# ABP Configuration
ABP_LICENSE_CODE=your_abp_license_code_if_commercial

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters_long

# SMTP Settings (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_ENABLE_SSL=true

# Vietnamese Restaurant Settings
RESTAURANT_NAME="Nhà hàng Thông minh"
RESTAURANT_ADDRESS="123 Đường ABC, Quận 1, TP.HCM"
RESTAURANT_PHONE="+84 28 1234 5678"
RESTAURANT_EMAIL=info@smartrestaurant.com

# Development Settings (only for dev environment)
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development